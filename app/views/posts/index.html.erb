<div class="form-group">
  <%= link_to fa_icon("plus"), new_post_path, class: "btn btn-primary" %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Last Update</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |p| %>
      <tr>
        <td>
          <% text = "#{p.title}" %>
          <%= link_to(text, post_path(p)) %>
        </td>
        <td>
          <% text = "#{p.body}" %>
          <%= link_to(text, post_path(p)) %>
        </td>
        <td>
          <% text = "#{p.updated_at}" %><%= text %>
        </td>
        <td>
          <%= link_to fa_icon("edit"), edit_post_path(id: p.id), class: "btn btn-info" %>
          <%= link_to fa_icon("trash"), post_path(id: p.id), method: :delete,
          data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
