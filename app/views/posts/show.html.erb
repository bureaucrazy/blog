<h1><%= @post.title %></h1>
<hr>
<div class="well">
  <%= @post.body %>
</div>
<%= link_to fa_icon("reply"), request.referer, class: "btn btn-primary" %>
<%= link_to fa_icon("edit"), edit_post_path(@post), class: "btn btn-primary" %>
<%= link_to fa_icon("trash"), post_path(@post), method: :delete,
data: {confirm: "Are you sure you want to delete this post?"}, class: "btn btn-danger" %>

<h2>New Comment</h2>
<% if @comment.errors.any? %>
  <ul>
    <% @comment.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for [@post, @comment] do |f| %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <button type="submit" class="btn btn-primary">
    <%= fa_icon("plus") %>
  </button>
<% end %>

<h2>Comments</h2>
<% @post.comments.order(updated_at: :desc).each do |com| %>
  <div class="well">
    <%= com.body %>
    <%= link_to fa_icon("trash"), post_comment_path(@post, com), method: :delete,
      data: {confirm: "Are you sure you want to delete this comment?"},
      class: "btn btn-danger" %>
  </div>
<% end %>
